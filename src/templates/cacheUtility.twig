<h2>Cache Utility</h2>
<div class="flex gap-2">
  <form class="utility" method="post" accept-charset="UTF-8">
    {{ actionInput('_toolkit/cache') }}
    {{ redirectInput('/admin/utilities/toolkit-cache') }}
    {{ csrfInput() }}


    <input type="submit" class="btn submit" value="Clear Cache">
  </form>
  <form class="utility" method="post" accept-charset="UTF-8">
    {{ actionInput('_toolkit/cache/warm') }}
    {{ redirectInput('/admin/utilities/toolkit-cache') }}
    {{ csrfInput() }}

    <input type="submit" class="btn submit" value="Warm Cache">
  </form>
</div>

<p>Cached pages: {{ cachedPagesCount }}</p>

