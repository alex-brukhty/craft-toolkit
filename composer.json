{
  "name": "alex-brukhty/craft-toolkit",
  "description": "Set of handy tools for any Craft CMS project",
  "type": "library",
  "license": "proprietary",
  "require": {
    "php": "^8.2",
    "craftcms/cms": "^5.0"
  },
  "autoload": {
    "psr-4": {
      "AlexBrukhty\\CraftToolkit\\": "src/"
    }
  },
  "authors": [
    {
      "name": "Alex Brukhty",
      "email": "alex@brukhty.com"
    }
  ],
  "minimum-stability": "dev",
  "config": {
    "allow-plugins": {
      "yiisoft/yii2-composer": true,
      "craftcms/plugin-installer": true
    },
    "sort-packages": true,
    "optimize-autoloader": true,
    "platform": {
      "php": "8.2"
    }
  }
}
